body {
    max-width: 960px;
    margin: 20px auto;
    font-size: 1.8rem;
    padding: 2rem;
}

* {
    font-family: 'Indie Flower', cursive;
}

#drop-zone {
    width: 100%;
    height: 400px;
    border: 4px dashed #ccc;
    border-radius: 1em;

    display: flex;
    justify-content: center;
    align-items: center;
}

#drop-zone.over {
    border-color: #93b8ff;
    background: #f0f4fb;
}

.result {
    width: 100%;
    height: auto;
}